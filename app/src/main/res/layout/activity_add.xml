<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp" android:layout_marginStart="15dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp">

        <!--Lokacija-->
        <TextView
                android:text="@string/label_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_location"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/label_location"
                android:ems="10"
                android:id="@+id/input_location"
        />

        <!--Odvajač-->
        <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Datum i vremena početka i završetka-->
        <TextView
                android:text="@string/label_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_date"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:hint="@string/label_date"
                android:id="@+id/input_date"
                android:clickable="true"
                android:focusable="false"
                android:cursorVisible="false"
        />
        <!--Odvajač-->
        <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />
        <TextView
                android:text="@string/label_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_time"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="none"
                    android:ems="10"
                    android:hint="@string/label_time_start"
                    android:id="@+id/input_time_start"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="none"
                    android:ems="10"
                    android:hint="@string/label_time_end"
                    android:id="@+id/input_time_end"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
            />
        </LinearLayout>

        <!--Odvajač-->
        <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Vozilo-->
        <TextView
                android:text="@string/label_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_vehicle"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/label_vehicle"
                android:ems="10"
                android:id="@+id/input_vehicle"
        />

        <!--Odvajač-->
        <View
                android:id="@+id/divider_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Početna i završna kilometraža-->
        <TextView
                android:text="@string/label_kilometers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_kilometers"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="@string/label_kilometers_start"
                    android:id="@+id/input_kilometers_start"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=" — "
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="@string/label_kilometers_end"
                    android:id="@+id/input_kilometers_end"
            />
        </LinearLayout>

        <!--Odvajač-->
        <View
                android:id="@+id/divider_5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Vrsta radova-->
        <TextView
                android:text="@string/label_work_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_work_type"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/label_work_type"
                android:ems="10"
                android:id="@+id/input_work_type"
        />

        <!--Odvajač-->
        <View
                android:id="@+id/divider_6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Vrsta radova-->
        <TextView
                android:text="@string/label_work_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_work_order"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/label_work_order"
                android:ems="10"
                android:id="@+id/input_work_order"
        />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>