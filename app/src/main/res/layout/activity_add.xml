<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp" android:layout_marginStart="15dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp">

        <!--Težina-->
        <TextView
                android:text="@string/label_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_weight"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/label_weight"
                android:id="@+id/input_weight"
        />

        <!--Odvajač-->
        <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
        />

        <!--Šećer-->
        <TextView
            android:text="@string/label_sugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_sugar"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/label_sugar"
            android:id="@+id/input_sugar"
        />

        <!--Odvajač-->
        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
        />

        <!--Tlak-->
        <TextView
            android:text="@string/label_blood_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_blood_pressure"
        />
        <GridLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
        >
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/label_blood_pressure_1"
                android:id="@+id/input_blood_pressure_1"
            />
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/label_blood_pressure_2"
                android:id="@+id/input_blood_pressure_2"
            />
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/label_blood_pressure_3"
                android:id="@+id/input_blood_pressure_3"
            />
        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>